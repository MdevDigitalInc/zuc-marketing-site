- var subtitle = 'Need help? We make it easy. Contact us and let us help you solve your problem!'
.zuc-split.flex.flex-row
  .zuc-split-4
    h1.zuc-contact-title.u-zuc-indigo Contact Us
    h3.zuc-contact-subtitle #{subtitle}
    p.u-zuc-indigo
      strong info@zucora.com
    p.u-zuc-indigo
      strong 1 800 388 2640
    p.u-zuc-indigo 552 Clark Road, London ON N5V 3K5
    .zuc-diagonals
    span this is a symbol
  .zuc-split-6
    .zuc-contact-forms-container.flex.flex-column
    form(action="")
        .zuc-input-group
          .zuc-input-name
            |First & Last Name
          input(type="text" data-required name="fullname" placeholder="John Smith")
        .zuc-input-group
          .zuc-input-name
            |Email Address
          input(type="email" data-required name="email" placeholder="example@email.co")
        .zuc-input-group
          .zuc-input-name
            |Phone Number
          input(type="tel" data-required name="phone" placeholder="000-000-0000")
        .zuc-input-group
          .zuc-input-name
            |Message
          input(type="text" data-required name="message" placeholder="Your Message Here")
        .zuc-input-group
          button.zuc-btn.contact-submit(type="submit")
            span SEND