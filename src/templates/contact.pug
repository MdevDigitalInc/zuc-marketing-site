- var subtitle = 'Need help? We make it easy. Contact us and let us help you solve your problem!'

.zuc-contact-us-container.flex.flex-column.flex-vert-center
  h1.zuc-contact-title Contact Us
  h3.zuc-contact-subtitle #{subtitle}
  p
    strong info@zucora.com
  p
    strong 1 800 388 2640
  p 552 Clark Road, London ON N5V 3K5
  .zuc-diagonals
    span this is a symbol
  .zuc-contact-forms-container.flex.flex-column
    form(action="")
      .zuc-input-group
        .zuc-input-name
          | First & Last Name
        input(type="text" data-required name="fullname" value="John Smith")
      .zuc-input-group
        .zuc-input-name
          | Email Address
        input(type="email" data-required name="email" value="example@email.co")
      .zuc-input-group
        .zuc-input-name
          | Phone Number
        input(type="tel" data-required name="phone" value="000-000-0000")
      .zuc-input-group
        .zuc-input-name
          | Message
        input(type="text" data-required name="message" value="Your Message Here")
      