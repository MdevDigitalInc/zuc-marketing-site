// Modal Container
.zuc-modal(data-modal-login onclick="toggleModal('[data-modal-login]')")
  // Modal Content
  .zuc-modal-content(onclick="event.stopPropagation()")
    // Place Modal Content Here
    //-------------------------------------------------
    .zuc-modal-title.u-text-center
      |Smarter Living Plan
    .zuc-modal-subtitle.u-text-center
      |Member login

    // User Email
    .zuc-input-group
      .zuc-input-name
        |Email address
      label.u-screenreader(for="field-email")
        |Email address
      input(type="text" required data-required id="field-email" name="email" placeholder="Email address")

    // User Password
    .zuc-input-group
      .zuc-input-name
        |Password
      label.u-screenreader(for="field-password")
        |User Password
      input(type="password" required data-required name="password" placeholder="Password")
      a(href="form-forgot-password.html" title="Password Reset" class="zuc-input-link")
        |I need help with my&nbsp;
        span.u-highlight password

    // Submit Button
    button.zuc-btn.zuc-btn-secondary.--full-width
      |Login

    a.zuc-register(href="#" title="Become a Member" class="zuc-input-link u-text-center" style="display:block")
      |I want to become a
      span.u-highlight
        | &nbsp;Smarter Living Member
