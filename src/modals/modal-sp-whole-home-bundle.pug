// Modal Container
//- TODO remove temporarily applied zuc-modal-active class (dev only)
.zuc-modal.zuc-modal-active(data-modal-whole-home-bundle onclick="toggleModal('[data-modal-whole-home-bundle]')")
  // Modal Content
  .zuc-modal-content.--sp-bundle(onclick="event.stopPropagation()")
    // Place Modal Content Here
    .zuc-sp-bundle-content
      //-------------------------------------------------
      //- Titles
      .zuc-sp-bundle--titles
        .zuc-sp-bundle--preheading.zuc-modal-subtitle.u-uppercase
          |Best Value
        h2.u-font-serif.u-zuc-indigo
          |Whole Home Bundle
        .zuc-sp-bundle--subheading.u-font-serif.u-light
          |Combine all 3 plans to save $50/month.
        p
          |Coverage includes repair, parts, and replacement for the items within your plans. The low monthly subscription fee gives you the coverage you want immediately without big, upfront costs.
        .zuc-sp-bundle--price
          span.sign
            |$
          span.dollar
            |69
          span.cents
            |.99
          span.month
            |/month
        .zuc-sp-bundle--btn
          button.zuc-btn.zuc-btn-secondary(href="#" title="todo")
            |Get started today
      //- Packages
      .zuc-custom-plan--items
        .zuc-custom-plan--box.flex
          img.photo(src='../../assets/images/service-plans/appliances.png' alt='Home Appliances')
          .plan-icon
            img(src="../../assets/images/icons/icon-plus.svg", alt="a circle with a plus in it")
          h4.zuc-sp-bundle--photo-text.u-font-serif.u-zuc-indigo
            |Appliances Coverage:
        .zuc-custom-plan--box.flex
          img.photo(src='../../assets/images/service-plans/home-furnishing.png' alt='Home Furnishings')
          .plan-icon
            img(src="../../assets/images/icons/icon-plus.svg", alt="A circle with a plus in it")
          h4.zuc-sp-bundle--photo-text.u-font-serif.u-zuc-indigo
            |Furniture Coverage:
        .zuc-custom-plan--box.flex
          img.photo(src='../../assets/images/service-plans/home-systems.png' alt='Home Systems')
          h4.zuc-sp-bundle--photo-text.u-font-serif.u-zuc-indigo
            |Home Systems Coverage:
      .zuc-sp-bundle--packages
        .zuc-sp-bundle-pkg
          ul
            each val in applianceCoverages
              li= val
        .zuc-sp-bundle-pkg
          ul
            each val in furnitureCoverages
              li= val
        .zuc-sp-bundle-pkg
          ul
            each val in homeSysCoverages
              li= val


