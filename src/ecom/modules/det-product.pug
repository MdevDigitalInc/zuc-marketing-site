-
  var info = {
    title: 'PureCare Sub-0&deg; Soft Cell Chill Reversible Hybrid Pillow',
    price_reg: '$169.99',
    price_mem: '$159.99',
    id: 'xxxxxx',
    available: true
  }

.zuc-ec-det-product
  .zuc-ec-product-title
    h1
      |!{info.title}
  .zuc-ec-product-info
    .zuc-ec-product-info-prices
      .zuc-ec-product-info-price-reg
        span
          |Regular pricing:&nbsp;
        span
          |!{info.price_reg}
      .zuc-ec-product-info-price-mem
        span
          |Member pricing:&nbsp;
        span
          |!{info.price_mem}
    .zuc-ec-product-info-stock
      .zuc-ec-product-info-id
        span
          |Item #:&nbsp;
        span
          |!{info.id}
      .zuc-ec-product-info-availability
        if info.available
          span
            |IN STOCK
        else
          span
            |OUT OF STOCK
  .zuc-ec-product-order-info
    .zuc-ec-product-order-info-size
    .zuc-ec-product-order-info-qty
  .zuc-btn-box
    a.zuc-btn.zuc-btn-secondary(href="#" title="#")
      |ADD TO CART
