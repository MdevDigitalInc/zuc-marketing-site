.zuc-ec-cart-summaries
  // Rewards & Promotios --------------------------------------------------------------
  .zuc-ec-summary
    // Title
    .zuc-ec-summary-title
      |Rewards & Promotions

    // Promo Code Input
    .zuc-form-promo
      strong.zuc-promo-title
        |Enter Promo Code:

      //- Container to keep the input & button aligned
      .flex.flex-vert-stretch.flex-nowrap
        // Input Field for Promo Code
        input(type="text" name="promocode")
        // Submission Button
        button.zuc-btn-inline(type="submit")
          |APPLY

  // Purchase Summarhy -----------------------------------------------------------------
  .zuc-ec-summary
    // Title
    .zuc-ec-summary-title
      |Purchase Summary

    .zuc-ec-summary-report
      // Iterator to generate report rows
      each value in summaryValues.length ? summaryValues : ['There are no summary values']
        .zuc-report-row.flex.flex-hor-between
          span
            |#{value.type}
          span
            |#{value.value}

      // Subtotal row
      .zuc-report-row.flex.flex-hor-between.--total
        span.u-uppercase
          |Subtotal

        span
          |$#{subtotal}

    // Cart Checkout Controls --------------------------------
    .zuc-cart-controls.flex.flex-vert-center
      a.zuc-ec-generic-link.u-phone-only(href="#" title="TODO")
        |Continue Shopping
      a.zuc-btn.zuc-btn-secondary.u-soft-shadow(href="#" title="TODO")
        |Proceed to Checkout

    // Taxes
    .zuc-subscript-info.u-text-right.--zuc-aux-size
      |#{taxesInfo}

  //Help & Assistance -------------------------------------------------------------------
  .zuc-summaries-footer.u-text-center.--zuc-aux-size
    //- Spaces HTML entity after the | are intentional and needed
    span.u-bold.u-uppercase
      |Need Help?
    span
      |&nbsp;We're here! See our&nbsp;
    a(href="#" title="TODO")
      |FAQ page
    span
      |&nbsp;or visit our&nbsp;
    a(href="#" title="TODO")
      |Contact page
    span
      |&nbsp;for more information
