.zuc-ec-cart-basket
  // Top Cart Legend
  .zuc-ec-cart-legend.flex.flex-hor-between.flex-vert-center
    .zuc-ec-cart-iteminfo.u-uppercase
      |Item
    .zuc-ec-cart-qty.flex-hor-start.u-uppercase
      |Qty
    .zuc-ec-cart-total.u-uppercase.u-text-right
      |Item Total

  // Cart Items Container

  .zuc-ec-cart-items
    // Individual Cart Item [ Iterated ] --------------------------------------------------------
    each item in cartItems.length ? cartItems : ['There are no items here']
      .zuc-ec-cart-item.flex.flex-hor-between.flex-vert-start
        // Item Basic Information -----------------------------------------
        .zuc-ec-cart-iteminfo.flex.flex-hor-start.flex-vert-center
          // Image
          .zuc-item-image
            img(src=item.image alt=item.alt)

          // Item Information --------------------------------------------
          .zuc-item-description
            .zuc-item-name
              |#{item.name}

            // Item Properties & Skus
            .zuc-item-props
              // SKU
              .zuc-prop
                |Item#: #{item.sku}
              //- If memeber price is active create strikethrough
              - if ( item.memPrice )
                .zuc-prop
                  span
                    |Price:&nbsp;
                  span.u-strikethrough
                    |$#{item.regPrice}
                  span.u-bold
                    |&nbsp;$#{item.memPrice}
              //- If there is no member price
              - else
                .zuc-prop
                  |Price:&nbsp;$#{item.regPrice}
              //- If there is color info...
              - if (item.color)
                .zuc-prop
                  |Colour:&nbsp;#{item.color}
              //- If there is sizing info...
              - if (item.size)
                .zuc-prop
                  |Size:&nbsp;#{item.size}
              // Item Controls
              .u-phone-only.u-bold.--qty
                |QTY
              .zuc-select-container.u-phone-only
                label.u-screenreader(for="field-qty")
                  |Choose quantity
                // - Tried to make iterator work.. but failed
                select(required name="size")
                  option(selected value="1")
                    |1
                  option(value="2")
                    |2
                  option(value="3")
                    |3
                  option(value="4")
                    |4
                  option(value="5")
                    |5
                  option(value="6")
                    |6
                  option(value="7")
                    |7
                  option(value="8")
                    |8
                  option(value="9")
                    |9
                  option(value="10")
                    |10

              .zuc-item-controls
                a(href="#" title="TODO" data-cart-remove)
                  |Remove
                a(href="#" title="TODO" data-cart-edit)
                  |Edit

        // Item Quantity Controls -------------------------------------------
        .zuc-ec-cart-qty.flex.flex-hor-start.flex-vert-center.u-hidden-phone
          .zuc-select-container
            label.u-screenreader(for="field-qty")
              |Choose quantity
            // - Tried to make iterator work.. but failed
            select(required name="size")
              option(selected value="1")
                |1
              option(value="2")
                |2
              option(value="3")
                |3
              option(value="4")
                |4
              option(value="5")
                |5
              option(value="6")
                |6
              option(value="7")
                |7
              option(value="8")
                |8
              option(value="9")
                |9
              option(value="10")
                |10
          // Remove Item
          i.far.fa-trash-alt(data-cart-remove)


        // Item Total ------------------------------------------------------
        // - It's being left with placeholder content because the backend will do the math
        .zuc-ec-cart-total.u-uppercase.u-text-right
          |$XXX.XX

