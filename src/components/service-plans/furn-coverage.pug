- var title = 'Furniture will wear out.'
- var subheading = 'convenient'
- var text = 'A cost-effective repair and replacement Service plan for your home furnishings will protect the family budget and remove the stress of accidental stains and damage.'
- var button = 'GET STARTED today'
section.zuc-whats-covered.flex
  .zuc-blob-module--text-section.zuc-blob-stack
    .zuc-title-container
      h4.u-uppercase
        |#{subheading}
      .zuc-title-flag
        .--green
    h2.u-font-serif.u-zuc-indigo
      |#{title}
    p.u-zuc-darkindigo
      |#{text}
    .zuc-btn-box
      a.zuc-btn.zuc-btn-secondary(href="#" title="todo")
        |#{button}
    .zuc-blob-module--grey-slash
      img.grey-slash(src='../../assets/images/graphics/graphic_slash_grey.svg' alt='TODO')
  .zuc-whats-covered-image
    img(src="../../assets/images/service-plans/servicewoman-chair.png", alt="todo")
