.zuc-nav-wrapper(data-nav-height)
  // Mobile Navigation
  include ./nav-userbar.pug

  // Main Navigation
  nav(class='zuc-main-nav flex flex-hor-start flex-hor-between flex-vert-center u-uppercase' data-main-navigation)
    // Nav Branding
    a(href="/" class="zuc-nav-brand")
      img(src='../../assets/images/ZucoraHome-brand-white.svg')

    // Nav Links
    .zuc-nav-links.flex.flex-hor-end.flex-hor-between.flex-no-wrap.flex-vert-center
      // Nav Dropdown
      include ./nav-dropdown.pug

    // Mobile Nav Button
    div(class='zuc-menu')
      div(class='zuc-menu-open' role='button' data-open-menu aria-label='Mobile Navigation')
        span(class='hidden' aria-hidden='true' aria-label='Clic to open mobile menu')
          |Mobile Menu

  // Mobile Navigation
  include ./nav-mobile.pug

  // Broadcast Banner
  include ./nav-broadcast.pug

// Login Modal
include ../modals/modal-login.pug
